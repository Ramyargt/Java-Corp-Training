package com.rgt.training.session3;

import java.util.List;
import java.util.Scanner;

public class Customer {

	private String firstName;
    private String lastName;
    private String id;
    
	public Customer(String firstName, String lastName, String id) {
		super();
		this.firstName = firstName;
		this.lastName = lastName;
		this.id = id;
	}

	
    Scanner sc= new Scanner(System.in);
    // Getters, setters, and other methods
	
    List<String> Customer;
	
    public void setCustomer() {
		System.out.println("Enter customer first name");
		firstName= sc.next();
		Customer.add(firstName);
		System.out.println("Enter customer last name");
		lastName= sc.next();
		System.out.println("Enter cusotmer ID");
		id= sc.next();
	}
	
	public List<String> getCustomer() {
		System.out.println("Customer details are ---");
		System.out.println("Customer firstname is " +Customer.get(0));
		System.out.println("Customer id is: ");
		return Customer;
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
