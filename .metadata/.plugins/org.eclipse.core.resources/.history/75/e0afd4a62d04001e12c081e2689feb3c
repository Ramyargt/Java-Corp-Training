    public void setCustomer(String firstname, String lastname, String ID) {
		System.out.println("Enter customer first name");
		firstName= sc.next();
		Customer.add(firstname);
		System.out.println("Enter customer last name");
		lastName= sc.next();
		System.out.println("Enter cusotmer ID");
		id= sc.next();
	}
	
	public List<String> getCustomer() {
		System.out.println("Customer firstname is " +Customer.get(0));
		return Customer;
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
